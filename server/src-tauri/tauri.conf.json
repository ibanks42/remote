{
	"build": {
		"beforeDevCommand": "bun run frontend",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist",
		"devUrl": "http://localhost:1420"
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"productName": "home-remote",
	"version": "1.0.0",
	"identifier": "dev.ibanks.remote",
	"plugins": {},
	"app": {
		"trayIcon": {
			"iconPath": "icons/128x128.png",
			"iconAsTemplate": true
		},
		"windows": [
			{
				"title": "Home Remote",
				"width": 320,
				"height": 600,
				"visible": false,
				"focus": false
			}
		],
		"security": {
			"csp": null
		}
